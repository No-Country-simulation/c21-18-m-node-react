generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or your DB provider
  url      = env("POSTGRES_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  role     Role     @default(GUEST)
  phone    String?
  
  // Relations
  applications Application[]
  
  @@map("users")
}

enum Role {
  GUEST
  ADMIN
  SUPER_ADMIN
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  age       Int
  type      PetType
  shelterId  Int
  picture   String?
  description String
  gender    PetGender
  status    Boolean

  // Relations
  shelter    Shelter   @relation(fields: [shelterId], references: [id])
  applications Application[]

  @@map("pets")
}

enum PetGender {
  MALE
  FEMALE
}

enum PetType {
  DOG
  CAT
}

model Application {
  id      Int   @id @default(autoincrement())
  userId  String
  petId   String
  status  Boolean  @default(false)

  // Relations
  user  User  @relation(fields: [userId], references: [id])
  pet   Pet   @relation(fields: [petId], references: [id])

  @@map("applications")
}

model Shelter {
  id       Int   @id @default(autoincrement())
  name    String
  address  String
  email    String   @unique
  phone    String
  
  // Relations
  pets Pet[]

  @@map("shelter")
}

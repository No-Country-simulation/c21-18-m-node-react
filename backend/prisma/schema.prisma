generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or your DB provider
  url      = env("POSTGRES_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  role     Role     @default(GUEST)
  phone    String?
  
  // Relations
  applications Application[]
  
  @@map("users")
}

enum Role {
  GUEST
  ADMIN
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  age       Int
  type      PetType
  refugeId  String
  picture   String?

  // Relations
  refuge    Refuge   @relation(fields: [refugeId], references: [id])
  applications Application[]

  @@map("pets")
}

enum PetType {
  DOG
  CAT
}

model Application {
  id      String   @id @default(uuid())
  userId  String
  petId   String
  status  Boolean  @default(false)

  // Relations
  user  User  @relation(fields: [userId], references: [id])
  pet   Pet   @relation(fields: [petId], references: [id])

  @@map("applications")
}

model Refuge {
  id       String   @id @default(uuid())
  address  String
  email    String   @unique
  phone    String
  
  // Relations
  pets Pet[]

  @@map("refuges")
}

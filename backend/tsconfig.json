{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",  // Add this line
    "paths": {
      "@/*": ["src/*"]  // Add this line
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
